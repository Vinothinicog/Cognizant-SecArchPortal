{
  "name": "securearch-portal",
  "version": "1.0.0",
  "description": "Enterprise Security Architecture Review Platform with OWASP Standards Integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/server.ts",
    "client:dev": "cd src/client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p src/server/tsconfig.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "setup:db": "ts-node src/server/scripts/setup-database.ts",
    "migrate": "ts-node src/server/scripts/migrate.ts",
    "seed": "ts-node src/server/scripts/seed.ts"
  },
  "keywords": [
    "security",
    "architecture",
    "review",
    "owasp",
    "asvs",
    "security-assessment",
    "vulnerability-management"
  ],
  "author": "SecureArch Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "nodemailer": "^6.9.7",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/pdf-parse": "^1.1.4",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vinothinicog/Vibeproject.git"
  },
  "bugs": {
    "url": "https://github.com/Vinothinicog/Vibeproject/issues"
  },
  "homepage": "https://github.com/Vinothinicog/Vibeproject#readme"
} 